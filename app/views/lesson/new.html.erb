<% content_for(:title, "Create Lesson | Learn How To Program") %>
<% content_for(:heading, "Create New Lesson" ) %>

<div class="container">

  <form action="/lessons" method="post" role="form">
    <div class="form-group">
      <label for="lesson_name">Name</label>
      <input class="form-control" id="lesson_name" name="lesson[name]" type="text" placeholder="Lesson Name">
    </div>

    <div class="form-group">
      <label for="section_menu">Section Menu</label>
      <select id="section_menu" class="form-control" name="lesson[section_id]" >
        <%= @sections.all.each do |section| %>
        <option value="<%= section.id %>"><%=section.name%></option>
        <% end %>
      </select>
    </div>
    <div class="form-group">
      <label for="lesson_content">Content</label>
      <input class="form-control" id="lesson_content" name="lesson[content]" type="text">
    </div>
    <div class="form-group">
      <label for="lesson_number">Lesson Number</label>
      <input class="form-control" id="lesson_number" name="lesson[number]" type="number">
    </div>
    <button type="submit" class="btn btn-danger">Create</button>
  </form>

</div>




