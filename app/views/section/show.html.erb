<h1><%= @section.name %></h1>

<h2>Section <%= @section.number%></h2>

<% if @section.lessons.length > 0 %>

  <h3>Lessons</h3>
  <ul>
  <%= @section.lessons.each do |lesson| %>
    <li><a href="/lessons/<%=lesson.id%>"><%=lesson.name%></a></li>
  <% end %>
  </ul>

<%else%>

  <h3>There are no lessons in this section yet.</h3>

<%end%>

<ul>
  <li><p><a href="/sections/<%=@section.id%>"
  data-confirm="Are you sure?"
  data-method="delete" rel="nofollow">
  Delete section</a></p></li>
  <li><p><a href="/sections/<%=@section.id%>/edit">Edit Section</a></p></li>
  <li><p><a href="/sections/<%=@section.next.id%>">Next Section</a></p></li>
  <li><p><a href="/sections/<%=@section.prev.id%>">Previous Section</a></p></li>
</ul>
